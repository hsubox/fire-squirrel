{
  "manifest_version": 2,
  "name": "this squirrel is on fire!",
  "version": "0.0.0.4",
  "description": "Replace a word on a page with another word. Now also supports urls!",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["onInstalled.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["findAndReplaceDOMText.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon" : "icon-96.png",
    "default_title" : "this squirrel is on fire!"
  },
  "permissions" : [
    "storage"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "96" : "icon-96.png",
    "128" : "icon-128.png"
  }
}
