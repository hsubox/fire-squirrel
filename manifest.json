{
  "manifest_version": 2,
  "name": "this squirrel is on fire!",
  "version": "1.0",
  "description": "Replace a word on a page with another word",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.1.1.min.js", "findAndReplaceDOMText.js", "options.js"],
      "css": ["options.css"],
      "run_at": "document_idle"
    }
  ],
  "page_action" :
  {
    "default_icon" : "icon-128.png",
    "default_title" : "this squirrel is on fire!"
  },
  "permissions" : [
    "storage"
  ],
  "icons" : {
    "128" : "icon-128.png"
  }
}
